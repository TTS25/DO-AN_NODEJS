<!DOCTYPE html>
    <html>

        <head>
            <title>User</title>
            <link id="bootstrap-css" rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
            <link rel="stylesheet" href="/stylesheets/style.css" type="text/css">
            <link rel="stylesheet" href="/stylesheets/components.css" type="text/css">
            <link rel="shortcut icon" href="">
            <script type="text/javascript" src="/javascript/build_in_libs/jquery-3.4.1.min.js"></script>
            <script type="text/javascript" src="/javascript/build_in_libs/peerjs.min.js"></script>
        </head>

        <body>
            <div class="main-content">
                <div class="section">
                    <div class="section-header">
                        <h1>List Users</h1>
                    </div>
                    <div class="section-body">
                        <!-- loggedId get from res.local in auth method -->
                        <div id="idClaller" data-value="<%= loggedId %>"></div>
                        <div class="card">
                            <div class="card-body table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Avatar</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% users.forEach(user => { %>
                                            <tr>
                                                <td></td>
                                                <td><b><%= user.name %></b></td>
                                                <td><i><%= user.email %></i></td>
                                                <td>
                                                    <button class="btn btn-light" onclick="Call(this)" value="<%= user._id %>">
                                                        <img src="/images/device-camera-video.svg" />
                                                    </button>
                                                </td>
                                                <td>
                                                    <button class="btn btn-light">
                                                        <img src="/images/comment-discussion.svg" />
                                                    </button>
                                                </td>
                                                <td></td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script type="text/javascript" src="/javascript/usersEvent.client.js"></script>
        </body>

    </html>